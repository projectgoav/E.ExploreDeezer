<Page
    x:Class="E.ExploreDeezer.UWP.Views.TracklistView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:E.ExploreDeezer.UWP.Views"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:controls="using:E.ExploreDeezer.UWP.Controls"
    xmlns:vm="using:E.ExploreDeezer.Core.ViewModels"
    xmlns:views="using:E.ExploreDeezer.UWP.Views"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Page.Resources>
        <views:InformationDataTemplateSelector x:Key="Doop" />

        <DataTemplate x:Name="InfoListTextCell">

            <StackPanel Orientation="Horizontal"
                        Margin="0,5,0,5">

                <TextBlock Text="{Binding Label}" 
                           Margin="0,0,5,0"
                           Width="250"/>

                <TextBlock Text="{Binding Value}" />

            </StackPanel>

        </DataTemplate>

        <DataTemplate x:Name="InfoListImageCell">

            <StackPanel Orientation="Horizontal"
                        Margin="0,5,0,5">

                <TextBlock Text="{Binding Label}"
                           VerticalAlignment="Center"
                           Margin="0,0,5,0"
                           Width="250"/>

                <Image Source="{Binding Value}"
                       Width="256"
                       Height="256" />

            </StackPanel>
        </DataTemplate>
        
    </Page.Resources>
    
    <ScrollViewer>

        <StackPanel Orientation="Vertical">

            <TextBlock Text="{Binding PageTitle}"
                       Margin="10,0,0,0"
                       FontSize="32"/>

            <Pivot>
   
                <!-- Tracklist -->
                <PivotItem Header="Tracklist">

                    <!-- For some reason using x:Bind, Mode=OneWay here doesn't actually
                         respond to PropertChanged events. I don't get it. -->
                    <ListView x:Name="Tracklist"
                          ItemsSource="{Binding Tracks}">

                        <ListView.ItemTemplate>
                            <DataTemplate>
                                <controls:TrackCell />
                            </DataTemplate>
                        </ListView.ItemTemplate>

                    </ListView>

                </PivotItem>

                
                <!-- Information (Title could be Album Info / Playlist Info -->
                
                <PivotItem Header="Information">

                    <ItemsControl x:Name="InfoList"
                                  ItemTemplateSelector="{StaticResource Doop}" />

                </PivotItem>


                
                <!-- Related content -->
                
                <!--
                <PivotItem Header="Related">
                        
                </PivotItem>
                 -->
                
            </Pivot>
               
        </StackPanel>
 
    </ScrollViewer>
    
</Page>
