<Page
    x:Class="E.ExploreDeezer.UWP.Views.MyDeezerView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:E.ExploreDeezer.UWP.Views"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:controls="using:E.ExploreDeezer.UWP.Controls"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid>

        <Grid.RowDefinitions>
            <RowDefinition Height="auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0"
                   Text="My Deezer"
                   Margin="10,0,0,0"
                   FontSize="32"/>

        <!-- Logged Out View -->
        <StackPanel Grid.Row="1"
                    Margin="10,10,10,0"
                    Orientation="Vertical"
                    Spacing="5"
                    HorizontalAlignment="Center"
                    Visibility="{x:Bind ViewModel.IsLoggedOut, Mode=OneWay}">

            <TextBlock FontSize="18"
                       Text="Login to your Deezer account for the following features:" />

            <TextBlock>  
                <LineBreak />
                <Run Text="- Access to your favourites" />
                <LineBreak />
                <Run Text="- Playlist management" />
                <LineBreak />
            </TextBlock>

            <Button x:Name="LoginButton"
                    HorizontalAlignment="Center"
                    Content="Login with Deezer" />

        </StackPanel>



        <!-- Logged In View -->
        <Pivot Grid.Row="1"
               Visibility="{x:Bind ViewModel.IsLoggedIn, Mode=OneWay}">

            <!-- Favourite Albums -->
            <PivotItem Header="Favourite Albums">

                <Grid>

                    <TextBlock Text="No content found"
                               HorizontalAlignment="Center"
                               VerticalAlignment="Center"
                               Visibility="{Binding AlbumFetchState,
                                                    Converter={StaticResource EmptyOrErrorFetchStateVisibility}}" />

                    <ProgressRing IsActive="True"
                                  Width="75"
                                  Height="75"
                                  HorizontalAlignment="Center"
                                  VerticalAlignment="Center"
                                  Visibility="{Binding AlbumFetchState,
                                                       Converter={StaticResource LoadingFetchStateVisibility}}" />


                    <GridView x:Name="AlbumChartGrid"
                              ItemsSource="{x:Bind ViewModel.FavouriteAlbums, Mode=OneWay}"
                              Visibility="{Binding AlbumFetchState,
                                                   Converter={StaticResource ContentAvailableFetchStateVisibility}}" >

                        <GridView.ItemTemplate>
                            <DataTemplate>
                                <controls:AlbumGridCell />
                            </DataTemplate>
                        </GridView.ItemTemplate>

                    </GridView>

                </Grid>

            </PivotItem>

            
            <!-- Favourite Artists -->
            <PivotItem Header="Favourite Artists">

                <Grid>

                    <TextBlock Text="No content found"
                               HorizontalAlignment="Center"
                               VerticalAlignment="Center"
                               Visibility="{Binding ArtistFetchState,         
                                                    Converter={StaticResource EmptyOrErrorFetchStateVisibility}}" />

                    <ProgressRing IsActive="True"
                                  Width="75"
                                  Height="75"
                                  HorizontalAlignment="Center"
                                  VerticalAlignment="Center"
                                  Visibility="{Binding ArtistFetchState,
                                                       Converter={StaticResource LoadingFetchStateVisibility}}" />


                    <GridView x:Name="ArtistChartGrid"
                              ItemsSource="{x:Bind ViewModel.FavouriteArtists, Mode=OneWay}"
                              Visibility="{Binding ArtistFetchState,
                                                   Converter={StaticResource ContentAvailableFetchStateVisibility}}">

                        <GridView.ItemTemplate>
                            <DataTemplate>
                                <controls:ArtistGridCell />
                            </DataTemplate>
                        </GridView.ItemTemplate>

                    </GridView>

                </Grid>

            </PivotItem>

            
            <!-- Favourite Tracks -->
            <PivotItem Header="Favourite Tracks">

                <Grid>

                    <TextBlock Text="No content found"
                               HorizontalAlignment="Center"
                               VerticalAlignment="Center"
                               Visibility="{Binding TrackFetchState,
                                                    Converter={StaticResource EmptyOrErrorFetchStateVisibility}}" />

                    <ProgressRing IsActive="True"
                                  Width="75"
                                  Height="75"
                                  HorizontalAlignment="Center"
                                  VerticalAlignment="Center"
                                  Visibility="{Binding TrackFetchState,
                                                       Converter={StaticResource LoadingFetchStateVisibility}}" />



                    <ListView x:Name="TracksListGrid"
                              ItemsSource="{x:Bind ViewModel.FavouriteTracks, Mode=OneWay}"
                              Visibility="{Binding TrackFetchState,
                                                   Converter={StaticResource ContentAvailableFetchStateVisibility}}">

                        <ListView.ItemTemplate>
                            <DataTemplate>
                                <controls:TrackListCell />
                            </DataTemplate>
                        </ListView.ItemTemplate>

                    </ListView>

                </Grid>

            </PivotItem>

        </Pivot>

    </Grid>
</Page>
