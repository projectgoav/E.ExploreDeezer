<UserControl
    x:Class="E.ExploreDeezer.UWP.Controls.PlaylistTracklistHeader"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:E.ExploreDeezer.UWP.Controls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    d:DesignHeight="300"
    d:DesignWidth="400">

    <Grid>

        <Grid.ColumnDefinitions>

            <ColumnDefinition Width="auto" />
            <ColumnDefinition Width="*" />

        </Grid.ColumnDefinitions>

        <Image x:Name="ArtworkImage"
               Grid.Column="0"
               Margin="5"
               Width="128"
               Height="128"
               Source="{x:Bind ViewModel.ArtworkUri}"/>


        <StackPanel Grid.Column="1"
                    Orientation="Vertical">

            <TextBlock Text="{x:Bind ViewModel.Title}"
                       FontSize="24"/>

            <TextBlock Text="{x:Bind ViewModel.CreatorName}" />

            <StackPanel Orientation="Horizontal">

                <TextBlock Text="Number of tracks: " />

                <TextBlock Text="{x:Bind ViewModel.NumberOfTracks}" />

            </StackPanel>

        </StackPanel>

    </Grid>
</UserControl>
