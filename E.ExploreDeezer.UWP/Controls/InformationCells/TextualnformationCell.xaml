<UserControl
    x:Class="E.ExploreDeezer.UWP.Controls.InformationCells.TextualnformationCell"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:E.ExploreDeezer.UWP.Controls.InformationCells"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    d:DesignHeight="300"
    d:DesignWidth="400">

    <StackPanel Orientation="Horizontal"
                        Margin="0,5,0,5"
                        Spacing="5">

        <TextBlock Width="250"
                   VerticalAlignment="Center"
                   Text="{x:Bind ViewModel.Label}"
                   FontSize="16"/>

        <TextBlock Text="{x:Bind ViewModel.Value}"
                   FontSize="14"
                   TextWrapping="Wrap"
                   TextTrimming="None" />

    </StackPanel>
    
</UserControl>
