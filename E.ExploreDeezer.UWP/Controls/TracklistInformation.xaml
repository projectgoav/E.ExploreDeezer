<UserControl
    x:Class="E.ExploreDeezer.UWP.Controls.TracklistInformation"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:E.ExploreDeezer.UWP.Controls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:controls="using:E.ExploreDeezer.UWP.Controls"
    xmlns:infoCells="using:E.ExploreDeezer.UWP.Controls.InformationCells"
    mc:Ignorable="d"
    d:DesignHeight="300"
    d:DesignWidth="400">

    <UserControl.Resources>

        <controls:InformationDataTemplateSelector x:Key="InfoTemplateSelector" />

        <DataTemplate x:Name="InfoListTextCell">
            <infoCells:TextualnformationCell />
        </DataTemplate>

        <DataTemplate x:Name="InfoListImageCell">
            <infoCells:ImageInformationCell />
        </DataTemplate>

    </UserControl.Resources>
    
    
    <ItemsControl x:Name="InfoList"
                  HorizontalAlignment="Stretch"
                  VerticalAlignment="Stretch"
                  ItemsSource="{x:Bind ViewModel.Values, Mode=OneWay}"
                  ItemTemplateSelector="{StaticResource InfoTemplateSelector}" />

</UserControl>
